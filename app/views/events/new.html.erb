
<div class="form"> 
<h1>New Event</h1>
<hr>
<% if flash[:errors_array] %>
  <% flash[:errors_array].each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @event do |f| %>
    <%= f.hidden_field :user_id, :value => @current_user.id %>
    <br>
    <br>
    
    <%= f.date_field :date, placeholder: "Date" %>
    <br>
    <br>
    
    <%= f.time_field :time, placeholder: "Time" %>
    <br>
    <br>
    
    <%= f.text_field :event_name, placeholder: "Event Name" %>
    <br>
    <br>

    <%= f.text_field :category, placeholder: "Category" %>
    <br>
    <br>
    <% if Contact.all.empty?%>
     
      <%= f.text_area :contact_id, placeholder: "Contact" %>
    <% else%>
  
     <%= f.collection_select :contact_id, Contact.all, :id, :name %>
    <% end%>
    <br>
    <br>
    
    <%= f.text_area :message, placeholder: "Write Message to Send"%>
    <br>
    <br>
    
    <%= f.text_area :note, placeholder: "Write a Note" %>
    <br>
    <br>
    <%= f.submit %>
<% end %>

<hr>
<p> If you have no contacts, create one below before creating an event:</p>
<button  class="btn btn-outline-success"><%= link_to "Create a Contact", new_contact_path, method: :get %></button>
<hr>
</div>