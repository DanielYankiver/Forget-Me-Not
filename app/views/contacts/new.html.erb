<h1>New Contact</h1>

<% if flash[:errors_array] %>
  <% flash[:errors_array].each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @contact do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :birthday %>
    <%= f.date_field :birthday %>
    <br>
    <%= f.label :contact_info %>
    <%= f.text_field :contact_info %>
    <br>
    <%= f.label :image %>
    <%= f.file_field :image%>
    <br>
    <%= f.submit %>
<% end %>